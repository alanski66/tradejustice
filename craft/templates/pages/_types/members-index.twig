
{% set entries = craft.entries.section('members').order('title asc').find() %}

{% for entry in entries %}
{% if entry.sticky %}
{% set sticky = "sticky" %}
{% else %}
{% set sticky = '' %}
{% endif %}
<article class="{{sticky}}">
    <h3><a target="_blank" href="{{ entry.memberUrl }}">{{ entry.title }}</a></h3>

    {% if entry.ShortDescription %}
    {{ entry.ShortDescription }}
    {% endif %}
</article>
{% endfor %}